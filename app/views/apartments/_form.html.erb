<%= form_for [@property, @apartment], class: 'form-horizontal' do |f| %>
  <% if @apartment.errors.any? %>
    <% @apartment.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Unit Tracker Notification", sticky: false) %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :unit_number, class: 'col-sm-4 control-label' %>
    <%= f.text_field :unit_number, class: 'form-control' %>
    <br>
    <%= f.label :beds, class: 'col-sm-4 control-label' %>
    <%= f.number_field :beds, class: 'form-control' %>
    <br>
    <%= f.label :baths, class: 'col-sm-4 control-label' %>
    <%= f.number_field :baths, class: 'form-control' %>
    <br>
    <%= f.label :unit_location, class: 'col-sm-4 control-label' %>
    <%= f.select :unit_location, options_for_select(['Garden', 'Ground', 'Upper']),{} , class: 'form-control' %>
    <br>
    <%= f.label :garage, class: 'col-sm-4 control-label' %>
    <%= f.select :garage, options_for_select(['Yes', 'No']),{}, class: 'form-control' %>
    <br>
    <%= f.label :garage_number, class: 'col-sm-4 control-label' %>
    <%= f.number_field :garage_number, class: 'form-control' %>
    <br>
    <%= f.label :renovation_type, class: 'col-sm-4 control-label' %>
    <%= f.select :renovation_type, options_for_select(['Full', 'Partial']), {}, class: 'form-control' %>
    <br>
    <%= f.label :floor_plan, class: 'col-sm-4 control-label' %>
    <%= f.select :floor_plan, options_for_select(['Arrowhead', 'Redbud', 'Magnolia', 'Aspen', 'Azalea', 'Dogwood', 'Monarch']), {},class: 'form-control' %>
    <br>
    <%= f.label :ntv, 'NTV', class: 'col-sm-4 control-label' %>
    <%= f.date_field :ntv, class: 'form-control' %>
    <br>
    <%= f.label :measure_date, class: 'col-sm-4 control-label' %>
    <%= f.date_field :measure_date, class: 'form-control' %>
    <br>
    <%= f.label :moveout_date, class: 'col-sm-4 control-label' %>
    <%= f.date_field :moveout_date, class: 'form-control' %>
    <br>
    <%= f.label :construction_start_date, class: 'col-sm-4 control-label' %>
    <%= f.date_field :construction_start_date, class: 'form-control' %>
    <br>
    <%= f.label :turnover_date, class: 'col-sm-4 control-label' %>
    <%= f.date_field :turnover_date, class: 'form-control' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>